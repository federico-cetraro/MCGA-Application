@model IEnumerable<MCGA.Data.Agenda>

@{
    ViewBag.Title = "Index";
}

<h2>Agenda por Profesional</h2>

<p>
    @Html.ActionLink("Crear Agenda", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Raw("Desde")
        </th>
        <th>
            @Html.Raw("Hasta")
        </th>
        <th>
            @Html.Raw("Hora Inicial")
        </th>
        <th>
            @Html.Raw("Hora Final")
        </th>
        <th>
            @Html.Raw("Dia de Atencion")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.fecha_desde.ToString("dd/MM/yyyy")
        </td>
        <td>
            @item.fecha_hasta.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoDia.descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
